@model MembershipSystemWithIdentity.ViewModels.PasswordResetByAdminViewModel

@{
    ViewData["Title"] = "ResetUserPassword";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Üye Şifre Değiştirme</h3>
<hr />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetUserPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input type="password" asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Şifre Değiştir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


