<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Bıdıbıdı</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Member">Üye Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Admin Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Editor" asp-controller="Member">Editör Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Manager" asp-controller="Member">Manager Ana Sayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4" style="display: flex; flex-direction: column;">
                <h3>Menü</h3>

                <a class="btn btn-danger mt-2" asp-action="IstanbulPage" asp-controller="Member">İstanbul Sayfa</a>
                <a class="btn btn-danger mt-2" asp-action="ViolencePage" asp-controller="Member">Şiddet İçeren Sayfas</a>
                <a class="btn btn-danger mt-2" asp-action="ExchangeRedirect" asp-controller="Member">Borsa Grafikleri</a>

                <a class="btn btn-info mt-2" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştirme</a>
                <a class="btn btn-info mt-2" asp-action="UserEdit" asp-controller="Member">Bilgi Güncelleme</a>
                <a class="btn btn-info mt-2" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
            </div>
        </div>
    </div>
</body>
</html>
